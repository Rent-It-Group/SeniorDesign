<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:src="@drawable/preview"
                android:padding="0dp"/>

            <!--Title-->
            <TextView
                android:id="@+id/title"
                android:textColor="@color/colorLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_title"
                android:textSize="22sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp" />

            <!--Description-->
            <TextView
                android:id="@+id/description"
                android:textColor="@color/colorLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_description"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <!--Condition-->
            <TextView
                android:id="@+id/condition"
                android:textColor="@color/colorLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_condition"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <!--City-->
            <TextView
                android:id="@+id/city"
                android:textColor="@color/colorLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_city"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>

            <!--Daily Rate-->
            <TextView
                android:id="@+id/rate"
                android:textColor="#AA3939"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/item_rate"
                android:textSize="20sp"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:paddingRight="15dp"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#000" />

            <!--Item Review-->
            <TextView
                android:id="@+id/label10"
                android:textColor="@color/colorLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:background="#000" />

            <!--Owner Info-->
            <TextView
                android:id="@+id/label11"
                android:textColor="@color/colorLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Owner"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/ownerImage"
                    android:layout_width="0dp"
                    android:layout_weight=".20"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:src="@drawable/ic_account"
                    android:padding="0dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight=".80">

                    <TextView
                        android:id="@+id/label12"
                        android:textColor="@color/colorLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Owner Name"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"

                            android:layout_marginLeft="10dp"
                            style="?android:attr/ratingBarStyleSmall"
                            android:stepSize="1.0"
                            android:isIndicator="true"
                            android:rating="2.0" />

                        <TextView
                            android:id="@+id/label13"
                            android:textColor="@color/colorLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(3)"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"/>


                    </LinearLayout>

                        <Button
                            android:id="@+id/ownerReview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Read All Reviews"
                            android:textColor="#AA3939"
                            android:textSize="16sp"
                            android:background="@color/windowBackground"
                            android:layout_marginLeft="10dp"
                            android:padding="0dp"/>


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/contact_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Contact Owner / Request Booking"
                android:layout_marginBottom="10dp"
                android:background="@color/colorAccent"
                android:layout_gravity="center_horizontal"/>
            <!--android:onClick=""-->

        </LinearLayout>
    </ScrollView>

</LinearLayout>